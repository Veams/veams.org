							{{/filter}}
						{{/objToArr}}
					</li>
					<li class="sitemap__list-item">
						<h4 class="sitemap__sub">Other Packages</h4>

						{{#objToArr ../pages}}
							{{#filter this by="parsed.data.subcategory" val="Other Packages"}}
								{{> sitemap__list pages=this context=../../this }}
							{{/filter}}
						{{/objToArr}}
					</li>
				</ol>
			{{/is}}
		{{/each}}
	</div>

	<div class="sitemap__overview">
		<h3 class="sitemap__headline">Methodology</h3>

		{{#each collections.docs}}
			{{#is name "Methodology"}}

				<ol class="sitemap__list">
					<li class="sitemap__list-item">
						<h4 class="sitemap__sub">General</h4>

						{{#objToArr ../pages}}
							{{#filter this by="parsed.data.subcategory" val="General"}}
								{{> sitemap__list pages=this context=../../this }}
							{{/filter}}
						{{/objToArr}}
					</li>
					<li class="sitemap__list-item">
						<h4 class="sitemap__sub">Instruments</h4>

						{{#objToArr ../pages}}
