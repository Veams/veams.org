{{! ---
Important Notes:
Be sure you use collections to categorize your sitemap.
If you do not want to use collections, just delete this `sitemap` partial
--- }}

<nav class="c-sitemap--default" data-css="c-sitemap">
	<!--<h2 class="sitemap__header">Sitemap</h2>-->
	<div class="sitemap__overview">
		<h3 class="sitemap__headline">Getting Started</h3>

		{{#each collections.docs}}
			{{#is name "Getting Started"}}
				{{> sitemap__list pages=../pages context=this }}
			{{/is}}
		{{/each}}
	</div>

	<div class="sitemap__overview">
		<h3 class="sitemap__headline">CLI</h3>

		{{#each collections.docs}}
			{{#is name "CLI"}}

				<ol class="sitemap__list">
					<li class="sitemap__list-item">
						<h4 class="sitemap__sub">General</h4>

						{{#objToArr ../pages}}
							{{#filter this by="parsed.data.subcategory" val="General"}}
								{{> sitemap__list pages=this context=../../this }}
							{{/filter}}
						{{/objToArr}}
					</li>
					<li class="sitemap__list-item">
						<h4 class="sitemap__sub">Generators</h4>

						{{#objToArr ../pages}}
							{{#filter this by="parsed.data.subcategory" val="Generators"}}
								{{> sitemap__list pages=this context=../../this }}
							{{/filter}}
						{{/objToArr}}
					</li>
				</ol>

			{{/is}}
		{{/each}}
	</div>

	<div class="sitemap__overview">
		<h3 class="sitemap__headline">Framework</h3>

		{{#each collections.docs}}
			{{#is name "Framework"}}

