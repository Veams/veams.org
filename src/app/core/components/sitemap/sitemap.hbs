							{{/filter}}
						{{/objToArr}}
					</li>
					<li class="sitemap__list-item">
						<h4 class="sitemap__sub">Plugins</h4>

						{{#objToArr ../pages}}
							{{#filter this by="parsed.data.subcategory" val="Plugins"}}
